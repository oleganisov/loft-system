{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-console": "off",
    "space-before-function-paren": 0
  }
}
